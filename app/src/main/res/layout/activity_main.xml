        <Button
            android:id="@+id/android01"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="sequencial" />

        <Button
            android:id="@+id/android02"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="translate" />

        <Button
            android:id="@+id/android03"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="scale" />

        <Button
            android:id="@+id/android04"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="alpha" />

        <Button
            android:id="@+id/android6"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="fadein" />

        <Button
            android:id="@+id/android7"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="fadeout" />

        <Button
            android:id="@+id/android8"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="lefttoright" />

        <Button
            android:id="@+id/android9"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="righttoleft" />

        <Button
            android:id="@+id/android10"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="slide_left" />

        <Button
            android:id="@+id/android11"
            android:layout_width="@dimen/button"
