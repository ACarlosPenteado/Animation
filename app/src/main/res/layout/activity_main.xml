            android:id="@+id/android16"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="zoom_fadein" />

        <Button
            android:id="@+id/android17"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
